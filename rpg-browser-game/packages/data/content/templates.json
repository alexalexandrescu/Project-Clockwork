      "type": "innkeeper",
      "personality": {
        "traits": ["hospitable", "chatty", "observant"],
        "mood": "friendly"
      },
      "baseDialogue": {
        "greeting": [
          "Welcome, traveler! Come in, come in!",
          "Good to see you! Looking for a room or a hot meal?",
          "Ah, another weary traveler. You've come to the right place!"
        ],
        "topics": {
          "rooms": [
            "We have comfortable rooms available. 10 gold per night, includes breakfast.",
            "Our beds are the softest in the realm, I guarantee it!"
          ],
          "rumors": [
            "I hear all sorts of things from travelers passing through...",
            "There's been talk of strange happenings in the old ruins to the north."
          ],
          "food": [
            "We serve the best stew this side of the mountains!",
            "Our cook makes a mean roasted chicken with herbs."
          ]
        },
        "farewell": [
          "Safe travels, friend!",
          "Come back anytime!",
          "May your journey be swift and your coin purse heavy!"
        ]
      },
      "schedule": [
        { "time": "06:00", "action": "open_inn", "location": "main_hall" },
        { "time": "12:00", "action": "serve_lunch", "location": "kitchen" },
        { "time": "18:00", "action": "serve_dinner", "location": "main_hall" },
        { "time": "22:00", "action": "close_inn", "location": "private_quarters" }
      ]
    },

    "blacksmith": {
      "type": "merchant",
      "personality": {
        "traits": ["hardworking", "direct", "proud"],
        "mood": "neutral"
      },
      "baseDialogue": {
        "greeting": [
          "Looking for quality weapons and armor? You've found the right smith.",
          "I don't have time for idle chat. Here to buy or sell?",
          "Every piece I forge is made to last. What do you need?"
        ],
        "topics": {
          "services": [
            "I can forge weapons, repair armor, and strengthen equipment.",
            "Bring me the materials, and I'll craft you something special."
          ],
          "craft": [
            "Quality work takes time. Rush jobs cost extra.",
            "I only work with the finest metals. Bring me good ore and I'll make you something remarkable."
          ],
          "trade": [
            "Show me what you've got. I'll give you a fair price.",
            "I buy damaged equipment - I can always melt it down for parts."
          ]
        },
        "farewell": [
          "May your blade stay sharp.",
          "Come back if you need repairs.",
          "Good luck out there."
        ]
      },
      "schedule": [
