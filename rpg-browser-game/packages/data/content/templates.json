        { "time": "16:00", "action": "patrol", "location": "docks" },
        { "time": "20:00", "action": "night_watch", "location": "city_walls" }
      ],
      "stats": {
        "health": 120,
        "attack": 15,
        "defense": 18,
        "level": 5
      }
    },

    "citizen": {
      "type": "citizen",
      "personality": {
        "traits": ["ordinary", "helpful", "busy"],
        "mood": "friendly"
      },
      "baseDialogue": {
        "greeting": [
          "Hello there!",
          "Good day to you!",
          "Can I help you with something?"
        ],
        "topics": {
          "city": [
            "It's a nice place to live. Peaceful, mostly.",
            "I've lived here all my life. It's home."
          ],
          "weather": [
            "Beautiful day, isn't it?",
            "Can't complain about the weather today!"
          ]
        },
        "farewell": [
          "Take care!",
          "Have a good day!",
          "Safe travels!"
        ]
      },
      "schedule": [
        { "time": "07:00", "action": "wake_up", "location": "home" },
        { "time": "09:00", "action": "work", "location": "workplace" },
        { "time": "17:00", "action": "leisure", "location": "town_square" },
        { "time": "20:00", "action": "sleep", "location": "home" }
      ]
    },

    "questgiver": {
      "type": "questgiver",
      "personality": {
        "traits": ["knowledgeable", "mysterious", "helpful"],
        "mood": "neutral"
      },
      "baseDialogue": {
        "greeting": [
          "Ah, an adventurer. I may have work for someone of your talents.",
          "You look capable. I have a matter that requires attention.",
          "Fortune brings you to me at an opportune time."
        ],
        "topics": {
          "quest": [
            "I have a task that needs doing. Are you interested?",
            "This is no simple errand. It will require skill and courage."
          ],
          "reward": [
            "Complete this task, and you'll be well compensated.",
            "I reward success generously, and I never forget those who help me."
          ]
        },
        "farewell": [
          "May fortune favor you.",
          "I'll be here when you complete the task.",
          "Good hunting, adventurer."
        ]
      },
      "schedule": [
        { "time": "10:00", "action": "available", "location": "guild_hall" },
        { "time": "18:00", "action": "available", "location": "tavern" },
        { "time": "22:00", "action": "rest", "location": "home" }
      ]
    }
