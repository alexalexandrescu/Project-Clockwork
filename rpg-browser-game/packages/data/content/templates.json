      "type": "guard",
      "personality": {
        "traits": ["dutiful", "alert", "suspicious"],
        "mood": "neutral"
      },
      "baseDialogue": {
        "greeting": [
          "State your business.",
          "Keep moving, citizen.",
          "Everything's under control here. Move along."
        ],
        "topics": {
          "duty": [
            "I'm here to keep the peace. Don't cause any trouble.",
            "We guards take our duty seriously. This city is safe because of us."
          ],
          "trouble": [
            "If you see anything suspicious, report it immediately.",
            "Crime doesn't pay in this city. We catch all the troublemakers eventually."
          ],
          "city": [
            "This is a good city, safe for honest folk.",
            "Stay out of the back alleys at night. That's when the riffraff come out."
          ]
        },
        "farewell": [
          "Stay out of trouble.",
          "Keep your nose clean.",
          "Move along now."
        ]
      },
      "schedule": [
        { "time": "08:00", "action": "patrol", "location": "market_square" },
